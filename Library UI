--[[ 
    DEMON HUB LIBRARY - V4.0 (ULTRA-BLACK EDITION)
    - Removed all borders/lines
    - Modern Large Circle Loader
    - Mobile Toggle Button (Draggable 'D')
    - Left/Right Control Toggle
]]

local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")

local Library = {}
local UIConfig = {
    MainColor = Color3.fromRGB(0, 0, 0), -- Pure Black
    SecondaryColor = Color3.fromRGB(12, 12, 12), -- Deep Matte
    AccentColor = Color3.fromRGB(200, 0, 0), -- Demon Red
    TextColor = Color3.fromRGB(255, 255, 255),
    Font = Enum.Font.GothamMedium,
    HeaderFont = Enum.Font.GothamBold
}

--// UTILITY: Draggable System
local function MakeDraggable(topbarobject, object)
    local Dragging, DragInput, DragStart, StartPosition
    topbarobject.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            Dragging = true
            DragStart = input.Position
            StartPosition = object.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then Dragging = false end
            end)
        end
    end)
    topbarobject.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            DragInput = input
        end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if input == DragInput and Dragging then
            local Delta = input.Position - DragStart
            object.Position = UDim2.new(StartPosition.X.Scale, StartPosition.X.Offset + Delta.X, StartPosition.Y.Scale, StartPosition.Y.Offset + Delta.Y)
        end
    end)
end

--// LOADING SEQUENCE
function Library:LoadSequence(onComplete)
    local LoaderGui = Instance.new("ScreenGui", CoreGui)
    LoaderGui.Name = "DemonHub_Loader"

    local BG = Instance.new("Frame", LoaderGui)
    BG.Size = UDim2.new(1, 0, 1, 0)
    BG.BackgroundColor3 = Color3.new(0,0,0)
    BG.BorderSizePixel = 0

    local Container = Instance.new("Frame", BG)
    Container.Size = UDim2.new(0, 400, 0, 400)
    Container.Position = UDim2.new(0.5, 0, 0.5, 0)
    Container.AnchorPoint = Vector2.new(0.5, 0.5)
    Container.BackgroundTransparency = 1

    -- Spinning Circle
    local Ring = Instance.new("ImageLabel", Container)
    Ring.Size = UDim2.new(0, 200, 0, 200)
    Ring.Position = UDim2.new(0.5, 0, 0.5, 0)
    Ring.AnchorPoint = Vector2.new(0.5, 0.5)
    Ring.Image = "rbxassetid://12437341355" -- Modern Ring
    Ring.ImageColor3 = UIConfig.AccentColor
    Ring.BackgroundTransparency = 1

    local Title = Instance.new("TextLabel", Container)
    Title.Size = UDim2.new(1, 0, 0, 50)
    Title.Position = UDim2.new(0, 0, 0.5, 0)
    Title.AnchorPoint = Vector2.new(0, 0.5)
    Title.Font = UIConfig.HeaderFont
    Title.Text = "DEMON HUB"
    Title.TextColor3 = UIConfig.TextColor
    Title.TextSize = 35
    Title.BackgroundTransparency = 1

    task.spawn(function()
        local rot = 0
        while LoaderGui.Parent do
            rot = rot + 5
            Ring.Rotation = rot
            task.wait()
        end
    end)

    task.wait(2.5) -- Cinematic pause
    
    local Fade = TweenService:Create(BG, TweenInfo.new(1), {BackgroundTransparency = 1})
    Fade:Play()
    Fade.Completed:Connect(function()
        LoaderGui:Destroy()
        if onComplete then onComplete() end
    end)
    TweenService:Create(Container, TweenInfo.new(0.5), {GroupTransparency = 1}):Play()
end

--// MAIN WINDOW
function Library:CreateWindow(titleName)
    local Window = { Open = true }
    
    local ScreenGui = Instance.new("ScreenGui", CoreGui)
    ScreenGui.Name = "DemonHub_UI"
    ScreenGui.ResetOnSpawn = false

    -- Mobile Toggle Button
    local MobileBtn = Instance.new("TextButton", ScreenGui)
    MobileBtn.Name = "MobileToggle"
    MobileBtn.Size = UDim2.new(0, 45, 0, 45)
    MobileBtn.Position = UDim2.new(0.1, 0, 0.1, 0)
    MobileBtn.BackgroundColor3 = UIConfig.MainColor
    MobileBtn.Text = "D"
    MobileBtn.Font = UIConfig.HeaderFont
    MobileBtn.TextColor3 = UIConfig.AccentColor
    MobileBtn.TextSize = 25
    MobileBtn.BorderSizePixel = 0
    Instance.new("UICorner", MobileBtn).CornerRadius = UDim.new(1, 0)
    MakeDraggable(MobileBtn, MobileBtn)

    local MainFrame = Instance.new("Frame", ScreenGui)
    MainFrame.BackgroundColor3 = UIConfig.MainColor
    MainFrame.Position = UDim2.new(0.5, -300, 0.5, -200)
    MainFrame.Size = UDim2.new(0, 600, 0, 400)
    MainFrame.BorderSizePixel = 0
    Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 6)

    -- Glow/Shadow Only (No hard lines)
    local Glow = Instance.new("ImageLabel", MainFrame)
    Glow.Size = UDim2.new(1, 60, 1, 60)
    Glow.Position = UDim2.new(0.5, 0, 0.5, 0)
    Glow.AnchorPoint = Vector2.new(0.5, 0.5)
    Glow.BackgroundTransparency = 1
    Glow.Image = "rbxassetid://5028857084"
    Glow.ImageColor3 = UIConfig.AccentColor
    Glow.ImageTransparency = 0.8
    Glow.ZIndex = 0

    local TopBar = Instance.new("Frame", MainFrame)
    TopBar.BackgroundColor3 = UIConfig.SecondaryColor
    TopBar.Size = UDim2.new(1, 0, 0, 40)
    TopBar.BorderSizePixel = 0
    Instance.new("UICorner", TopBar).CornerRadius = UDim.new(0, 6)
    
    local Title = Instance.new("TextLabel", TopBar)
    Title.BackgroundTransparency = 1
    Title.Position = UDim2.new(0, 15, 0, 0)
    Title.Size = UDim2.new(1, -15, 1, 0)
    Title.Font = UIConfig.HeaderFont
    Title.Text = titleName
    Title.TextColor3 = UIConfig.AccentColor
    Title.TextSize = 14
    Title.TextXAlignment = Enum.TextXAlignment.Left

    local TabContainer = Instance.new("ScrollingFrame", MainFrame)
    TabContainer.Size = UDim2.new(0, 140, 1, -50)
    TabContainer.Position = UDim2.new(0, 5, 0, 45)
    TabContainer.BackgroundTransparency = 1
    TabContainer.BorderSizePixel = 0
    TabContainer.ScrollBarThickness = 0
    
    local TabList = Instance.new("UIListLayout", TabContainer)
    TabList.Padding = UDim.new(0, 4)

    local Pages = Instance.new("Frame", MainFrame)
    Pages.BackgroundTransparency = 1
    Pages.Position = UDim2.new(0, 155, 0, 45)
    Pages.Size = UDim2.new(1, -165, 1, -55)

    -- Toggle Logic
    local function ToggleUI()
        Window.Open = not Window.Open
        MainFrame.Visible = Window.Open
    end

    UserInputService.InputBegan:Connect(function(io, p)
        if not p and (io.KeyCode == Enum.KeyCode.RightControl or io.KeyCode == Enum.KeyCode.LeftControl) then
            ToggleUI()
        end
    end)
    MobileBtn.MouseButton1Click:Connect(ToggleUI)
    MakeDraggable(TopBar, MainFrame)

    local First = true
    function Window:CreateTab(name)
        local Tab = {}
        local TabBtn = Instance.new("TextButton", TabContainer)
        TabBtn.Size = UDim2.new(1, -10, 0, 35)
        TabBtn.BackgroundColor3 = UIConfig.SecondaryColor
        TabBtn.BorderSizePixel = 0
        TabBtn.Text = name
        TabBtn.Font = UIConfig.Font
        TabBtn.TextColor3 = Color3.fromRGB(150, 150, 150)
        TabBtn.TextSize = 13
        Instance.new("UICorner", TabBtn).CornerRadius = UDim.new(0, 4)

        local Page = Instance.new("ScrollingFrame", Pages)
        Page.Size = UDim2.new(1, 0, 1, 0)
        Page.BackgroundTransparency = 1
        Page.Visible = false
        Page.BorderSizePixel = 0
        Page.ScrollBarThickness = 2
        Page.ScrollBarImageColor3 = UIConfig.AccentColor
        
        local PageList = Instance.new("UIListLayout", Page)
        PageList.Padding = UDim.new(0, 5)

        if First then
            First = false
            Page.Visible = true
            TabBtn.TextColor3 = UIConfig.TextColor
            TabBtn.BackgroundColor3 = UIConfig.AccentColor
        end

        TabBtn.MouseButton1Click:Connect(function()
            for _, v in pairs(Pages:GetChildren()) do v.Visible = false end
            for _, v in pairs(TabContainer:GetChildren()) do 
                if v:IsA("TextButton") then
                    v.TextColor3 = Color3.fromRGB(150, 150, 150)
                    v.BackgroundColor3 = UIConfig.SecondaryColor
                end
            end
            Page.Visible = true
            TabBtn.TextColor3 = UIConfig.TextColor
            TabBtn.BackgroundColor3 = UIConfig.AccentColor
        end)

        --// ELEMENTS (COMPATIBILITY)
        function Tab:CreateButton(text, callback)
            local b = Instance.new("TextButton", Page)
            b.Size = UDim2.new(1, -5, 0, 35)
            b.BackgroundColor3 = UIConfig.SecondaryColor
            b.BorderSizePixel = 0
            b.Font = UIConfig.Font
            b.Text = text
            b.TextColor3 = UIConfig.TextColor
            Instance.new("UICorner", b)
            b.MouseButton1Click:Connect(callback)
        end

        function Tab:CreateToggle(text, def, callback)
            local state = def
            local b = Instance.new("TextButton", Page)
            b.Size = UDim2.new(1, -5, 0, 35)
            b.BackgroundColor3 = UIConfig.SecondaryColor
            b.BorderSizePixel = 0
            b.Text = "  " .. text
            b.Font = UIConfig.Font
            b.TextColor3 = UIConfig.TextColor
            b.TextXAlignment = Enum.TextXAlignment.Left
            Instance.new("UICorner", b)

            local Ind = Instance.new("Frame", b)
            Ind.Size = UDim2.new(0, 20, 0, 20)
            Ind.Position = UDim2.new(1, -30, 0.5, -10)
            Ind.BackgroundColor3 = state and UIConfig.AccentColor or Color3.fromRGB(40,40,40)
            Ind.BorderSizePixel = 0
            Instance.new("UICorner", Ind)

            b.MouseButton1Click:Connect(function()
                state = not state
                Ind.BackgroundColor3 = state and UIConfig.AccentColor or Color3.fromRGB(40,40,40)
                callback(state)
            end)
        end

        function Tab:CreateSlider(text, min, max, def, callback)
            local sFrame = Instance.new("Frame", Page)
            sFrame.Size = UDim2.new(1, -5, 0, 45)
            sFrame.BackgroundColor3 = UIConfig.SecondaryColor
            sFrame.BorderSizePixel = 0
            Instance.new("UICorner", sFrame)

            local lab = Instance.new("TextLabel", sFrame)
            lab.Size = UDim2.new(1, 0, 0, 20)
            lab.Text = "  " .. text
            lab.Font = UIConfig.Font
            lab.TextColor3 = UIConfig.TextColor
            lab.BackgroundTransparency = 1
            lab.TextXAlignment = Enum.TextXAlignment.Left

            local bar = Instance.new("Frame", sFrame)
            bar.Size = UDim2.new(1, -20, 0, 5)
            bar.Position = UDim2.new(0, 10, 0, 30)
            bar.BackgroundColor3 = Color3.fromRGB(40,40,40)
            bar.BorderSizePixel = 0

            local fill = Instance.new("Frame", bar)
            fill.Size = UDim2.new((def-min)/(max-min), 0, 1, 0)
            fill.BackgroundColor3 = UIConfig.AccentColor
            fill.BorderSizePixel = 0

            -- Simplified dragging logic for sliders
            bar.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                    local move = UserInputService.InputChanged:Connect(function(input2)
                        if input2.UserInputType == Enum.UserInputType.MouseMovement or input2.UserInputType == Enum.UserInputType.Touch then
                            local pos = math.clamp((input2.Position.X - bar.AbsolutePosition.X) / bar.AbsoluteSize.X, 0, 1)
                            fill.Size = UDim2.new(pos, 0, 1, 0)
                            callback(math.floor(min + (max-min)*pos))
                        end
                    end)
                    input.Changed:Connect(function()
                        if input.UserInputState == Enum.UserInputState.End then move:Disconnect() end
                    end)
                end
            end)
        end

        function Tab:CreateParagraph(title, content)
            local f = Instance.new("Frame", Page)
            f.Size = UDim2.new(1, -5, 0, 60)
            f.BackgroundColor3 = UIConfig.SecondaryColor
            f.BorderSizePixel = 0
            Instance.new("UICorner", f)

            local t = Instance.new("TextLabel", f)
            t.Size = UDim2.new(1, -10, 0, 20)
            t.Position = UDim2.new(0, 10, 0, 5)
            t.Text = title
            t.Font = UIConfig.HeaderFont
            t.TextColor3 = UIConfig.AccentColor
            t.BackgroundTransparency = 1
            t.TextXAlignment = Enum.TextXAlignment.Left

            local c = Instance.new("TextLabel", f)
            c.Name = "Content"
            c.Size = UDim2.new(1, -20, 0, 30)
            c.Position = UDim2.new(0, 10, 0, 25)
            c.Text = content
            c.Font = UIConfig.Font
            c.TextColor3 = UIConfig.TextColor
            c.BackgroundTransparency = 1
            c.TextWrapped = true
            c.TextXAlignment = Enum.TextXAlignment.Left
            c.TextYAlignment = Enum.TextYAlignment.Top
            return f
        end

        function Tab:CreateDropdown(text, list, callback)
            local f = Instance.new("Frame", Page)
            f.Size = UDim2.new(1, -5, 0, 35)
            f.BackgroundColor3 = UIConfig.SecondaryColor
            f.BorderSizePixel = 0
            f.ClipsDescendants = true
            Instance.new("UICorner", f)

            local b = Instance.new("TextButton", f)
            b.Size = UDim2.new(1, 0, 0, 35)
            b.Text = text .. " +"
            b.Font = UIConfig.Font
            b.TextColor3 = UIConfig.TextColor
            b.BackgroundTransparency = 1

            local open = false
            b.MouseButton1Click:Connect(function()
                open = not open
                f:TweenSize(UDim2.new(1, -5, 0, open and 150 or 35), "Out", "Quart", 0.3, true)
            end)

            for _, v in pairs(list) do
                local opt = Instance.new("TextButton", f)
                opt.Size = UDim2.new(1, 0, 0, 25)
                opt.Text = v
                opt.BackgroundColor3 = Color3.fromRGB(20,20,20)
                opt.BorderSizePixel = 0
                opt.TextColor3 = UIConfig.TextColor
                opt.MouseButton1Click:Connect(function()
                    b.Text = text .. " : " .. v
                    callback(v)
                    open = false
                    f:TweenSize(UDim2.new(1, -5, 0, 35), "Out", "Quart", 0.3, true)
                end)
            end
        end

        -- Add rest of compatibility stubs (Labels, Separators, etc)
        function Tab:CreateLabel(t) 
            local l = Instance.new("TextLabel", Page)
            l.Size = UDim2.new(1, 0, 0, 20); l.Text = t; l.Font = UIConfig.Font
            l.TextColor3 = UIConfig.TextColor; l.BackgroundTransparency = 1
        end
        function Tab:CreateSeparator()
            local s = Instance.new("Frame", Page)
            s.Size = UDim2.new(1, -10, 0, 1); s.BackgroundColor3 = Color3.fromRGB(50,50,50); s.BorderSizePixel = 0
        end
        function Tab:CreateKeybind(t, def, callback) Tab:CreateButton(t .. " ["..def.."]", callback) end
        function Tab:CreateTextbox(t, callback) Tab:CreateButton(t, callback) end
        function Tab:CreateColorPicker(t, def, callback) Tab:CreateButton(t, callback) end
        function Tab:CreatePlayerDropdown(t, cb) 
            local plrs = {} 
            for _,p in pairs(game.Players:GetPlayers()) do table.insert(plrs, p.Name) end
            Tab:CreateDropdown(t, plrs, cb)
        end

        return Tab
    end
    
    return Window
end

--// AUTO-INIT LOAD
Library:LoadSequence()

return Library
