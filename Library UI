--[[ 
    DEMON HUB LIBRARY - V4.5 (STABLE DROPDOWN & VOID BLACK)
    - Fixed Dropdown Scrolling & Layout
    - Removed all border lines (BorderSizePixel = 0)
    - Improved Mobile Toggle & Loading Circle
]]

local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")

local Library = {}
local UIConfig = {
    MainColor = Color3.fromRGB(0, 0, 0),
    SecondaryColor = Color3.fromRGB(10, 10, 10),
    AccentColor = Color3.fromRGB(200, 0, 0),
    TextColor = Color3.fromRGB(255, 255, 255),
    Font = Enum.Font.GothamMedium,
    HeaderFont = Enum.Font.GothamBold
}

local function MakeDraggable(topbarobject, object)
    local Dragging, DragInput, DragStart, StartPosition
    topbarobject.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            Dragging = true
            DragStart = input.Position
            StartPosition = object.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then Dragging = false end
            end)
        end
    end)
    topbarobject.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            DragInput = input
        end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if input == DragInput and Dragging then
            local Delta = input.Position - DragStart
            object.Position = UDim2.new(StartPosition.X.Scale, StartPosition.X.Offset + Delta.X, StartPosition.Y.Scale, StartPosition.Y.Offset + Delta.Y)
        end
    end)
end

function Library:LoadSequence()
    local LoaderGui = Instance.new("ScreenGui", CoreGui)
    local BG = Instance.new("Frame", LoaderGui)
    BG.Size = UDim2.new(1, 0, 1, 0)
    BG.BackgroundColor3 = Color3.new(0,0,0)
    BG.BorderSizePixel = 0

    local Container = Instance.new("Frame", BG)
    Container.Size = UDim2.new(0, 300, 0, 300)
    Container.Position = UDim2.new(0.5, 0, 0.5, 0)
    Container.AnchorPoint = Vector2.new(0.5, 0.5)
    Container.BackgroundTransparency = 1

    local Ring = Instance.new("ImageLabel", Container)
    Ring.Size = UDim2.new(0, 150, 0, 150)
    Ring.Position = UDim2.new(0.5, 0, 0.5, 0)
    Ring.AnchorPoint = Vector2.new(0.5, 0.5)
    Ring.Image = "rbxassetid://12437341355"
    Ring.ImageColor3 = UIConfig.AccentColor
    Ring.BackgroundTransparency = 1

    task.spawn(function()
        while LoaderGui.Parent do Ring.Rotation += 4 task.wait() end
    end)

    task.wait(2)
    TweenService:Create(BG, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
    task.wait(0.5)
    LoaderGui:Destroy()
end

function Library:CreateWindow(titleName)
    local Window = { Open = true }
    local ScreenGui = Instance.new("ScreenGui", CoreGui)
    ScreenGui.Name = "DemonHub_UI"

    local MobileBtn = Instance.new("TextButton", ScreenGui)
    MobileBtn.Size = UDim2.new(0, 50, 0, 50)
    MobileBtn.Position = UDim2.new(0, 20, 0.5, 0)
    MobileBtn.BackgroundColor3 = UIConfig.SecondaryColor
    MobileBtn.Text = "D"
    MobileBtn.TextColor3 = UIConfig.AccentColor
    MobileBtn.TextSize = 30
    MobileBtn.BorderSizePixel = 0
    Instance.new("UICorner", MobileBtn).CornerRadius = UDim.new(1, 0)
    MakeDraggable(MobileBtn, MobileBtn)

    local MainFrame = Instance.new("Frame", ScreenGui)
    MainFrame.BackgroundColor3 = UIConfig.MainColor
    MainFrame.Position = UDim2.new(0.5, -300, 0.5, -200)
    MainFrame.Size = UDim2.new(0, 600, 0, 400)
    MainFrame.BorderSizePixel = 0
    Instance.new("UICorner", MainFrame)

    local TopBar = Instance.new("Frame", MainFrame)
    TopBar.BackgroundColor3 = UIConfig.SecondaryColor
    TopBar.Size = UDim2.new(1, 0, 0, 40)
    TopBar.BorderSizePixel = 0
    Instance.new("UICorner", TopBar)
    
    local Title = Instance.new("TextLabel", TopBar)
    Title.BackgroundTransparency = 1
    Title.Position = UDim2.new(0, 15, 0, 0)
    Title.Size = UDim2.new(1, -15, 1, 0)
    Title.Font = UIConfig.HeaderFont
    Title.Text = titleName
    Title.TextColor3 = UIConfig.AccentColor
    Title.TextSize = 14
    Title.TextXAlignment = Enum.TextXAlignment.Left

    local TabContainer = Instance.new("ScrollingFrame", MainFrame)
    TabContainer.Size = UDim2.new(0, 140, 1, -50)
    TabContainer.Position = UDim2.new(0, 5, 0, 45)
    TabContainer.BackgroundTransparency = 1
    TabContainer.BorderSizePixel = 0
    TabContainer.ScrollBarThickness = 0
    Instance.new("UIListLayout", TabContainer).Padding = UDim.new(0, 4)

    local Pages = Instance.new("Frame", MainFrame)
    Pages.BackgroundTransparency = 1
    Pages.Position = UDim2.new(0, 155, 0, 45)
    Pages.Size = UDim2.new(1, -165, 1, -55)

    local function ToggleUI()
        Window.Open = not Window.Open
        MainFrame.Visible = Window.Open
    end

    UserInputService.InputBegan:Connect(function(io, p)
        if not p and (io.KeyCode == Enum.KeyCode.RightControl or io.KeyCode == Enum.KeyCode.LeftControl) then
            ToggleUI()
        end
    end)
    MobileBtn.MouseButton1Click:Connect(ToggleUI)
    MakeDraggable(TopBar, MainFrame)

    local First = true
    function Window:CreateTab(name)
        local Tab = {}
        local TabBtn = Instance.new("TextButton", TabContainer)
        TabBtn.Size = UDim2.new(1, -10, 0, 35)
        TabBtn.BackgroundColor3 = UIConfig.SecondaryColor
        TabBtn.BorderSizePixel = 0
        TabBtn.Text = name
        TabBtn.Font = UIConfig.Font
        TabBtn.TextColor3 = Color3.fromRGB(150, 150, 150)
        TabBtn.TextSize = 13
        Instance.new("UICorner", TabBtn)

        local Page = Instance.new("ScrollingFrame", Pages)
        Page.Size = UDim2.new(1, 0, 1, 0)
        Page.BackgroundTransparency = 1
        Page.Visible = false
        Page.BorderSizePixel = 0
        Page.ScrollBarThickness = 2
        Page.ScrollBarImageColor3 = UIConfig.AccentColor
        Instance.new("UIListLayout", Page).Padding = UDim.new(0, 5)

        if First then
            First = false
            Page.Visible = true
            TabBtn.TextColor3 = UIConfig.TextColor
            TabBtn.BackgroundColor3 = UIConfig.AccentColor
        end

        TabBtn.MouseButton1Click:Connect(function()
            for _, v in pairs(Pages:GetChildren()) do v.Visible = false end
            for _, v in pairs(TabContainer:GetChildren()) do 
                if v:IsA("TextButton") then
                    v.TextColor3 = Color3.fromRGB(150, 150, 150)
                    v.BackgroundColor3 = UIConfig.SecondaryColor
                end
            end
            Page.Visible = true
            TabBtn.TextColor3 = UIConfig.TextColor
            TabBtn.BackgroundColor3 = UIConfig.AccentColor
        end)

        function Tab:CreateButton(text, callback)
            local b = Instance.new("TextButton", Page)
            b.Size = UDim2.new(1, -5, 0, 35)
            b.BackgroundColor3 = UIConfig.SecondaryColor
            b.BorderSizePixel = 0
            b.Font = UIConfig.Font
            b.Text = text
            b.TextColor3 = UIConfig.TextColor
            Instance.new("UICorner", b)
            b.MouseButton1Click:Connect(callback)
        end

        function Tab:CreateToggle(text, def, callback)
            local state = def
            local b = Instance.new("TextButton", Page)
            b.Size = UDim2.new(1, -5, 0, 35)
            b.BackgroundColor3 = UIConfig.SecondaryColor
            b.BorderSizePixel = 0
            b.Text = "  " .. text
            b.Font = UIConfig.Font
            b.TextColor3 = UIConfig.TextColor
            b.TextXAlignment = Enum.TextXAlignment.Left
            Instance.new("UICorner", b)

            local Ind = Instance.new("Frame", b)
            Ind.Size = UDim2.new(0, 20, 0, 20)
            Ind.Position = UDim2.new(1, -30, 0.5, -10)
            Ind.BackgroundColor3 = state and UIConfig.AccentColor or Color3.fromRGB(40,40,40)
            Ind.BorderSizePixel = 0
            Instance.new("UICorner", Ind)

            b.MouseButton1Click:Connect(function()
                state = not state
                Ind.BackgroundColor3 = state and UIConfig.AccentColor or Color3.fromRGB(40,40,40)
                callback(state)
            end)
        end

        function Tab:CreateDropdown(text, list, callback)
            local DropFrame = Instance.new("Frame", Page)
            DropFrame.Size = UDim2.new(1, -5, 0, 35)
            DropFrame.BackgroundColor3 = UIConfig.SecondaryColor
            DropFrame.BorderSizePixel = 0
            DropFrame.ClipsDescendants = true
            Instance.new("UICorner", DropFrame)

            local MainBtn = Instance.new("TextButton", DropFrame)
            MainBtn.Size = UDim2.new(1, 0, 0, 35)
            MainBtn.BackgroundTransparency = 1
            MainBtn.Text = "  " .. text .. "  â–¼"
            MainBtn.Font = UIConfig.Font
            MainBtn.TextColor3 = UIConfig.TextColor
            MainBtn.TextXAlignment = Enum.TextXAlignment.Left

            local ItemHolder = Instance.new("ScrollingFrame", DropFrame)
            ItemHolder.Size = UDim2.new(1, 0, 0, 120)
            ItemHolder.Position = UDim2.new(0, 0, 0, 35)
            ItemHolder.BackgroundTransparency = 1
            ItemHolder.BorderSizePixel = 0
            ItemHolder.ScrollBarThickness = 2
            ItemHolder.ScrollBarImageColor3 = UIConfig.AccentColor
            local ItemList = Instance.new("UIListLayout", ItemHolder)
            
            local open = false
            MainBtn.MouseButton1Click:Connect(function()
                open = not open
                TweenService:Create(DropFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quart), {
                    Size = open and UDim2.new(1, -5, 0, 160) or UDim2.new(1, -5, 0, 35)
                }):Play()
            end)

            for _, val in pairs(list) do
                local it = Instance.new("TextButton", ItemHolder)
                it.Size = UDim2.new(1, 0, 0, 30)
                it.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
                it.BorderSizePixel = 0
                it.Text = tostring(val)
                it.Font = UIConfig.Font
                it.TextColor3 = UIConfig.TextColor
                it.MouseButton1Click:Connect(function()
                    MainBtn.Text = "  " .. text .. ": " .. tostring(val)
                    open = false
                    TweenService:Create(DropFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quart), {Size = UDim2.new(1, -5, 0, 35)}):Play()
                    callback(val)
                end)
            end
            ItemHolder.CanvasSize = UDim2.new(0, 0, 0, #list * 30)
        end

        function Tab:CreateSlider(text, min, max, def, callback)
            local f = Instance.new("Frame", Page)
            f.Size = UDim2.new(1, -5, 0, 45); f.BackgroundColor3 = UIConfig.SecondaryColor; f.BorderSizePixel = 0
            Instance.new("UICorner", f)
            local l = Instance.new("TextLabel", f)
            l.Size = UDim2.new(1, 0, 0, 20); l.Text = "  " .. text; l.Font = UIConfig.Font; l.TextColor3 = UIConfig.TextColor; l.BackgroundTransparency = 1; l.TextXAlignment = Enum.TextXAlignment.Left
            local b = Instance.new("Frame", f)
            b.Size = UDim2.new(1, -20, 0, 5); b.Position = UDim2.new(0, 10, 0, 30); b.BackgroundColor3 = Color3.fromRGB(40,40,40); b.BorderSizePixel = 0
            local fi = Instance.new("Frame", b)
            fi.Size = UDim2.new((def-min)/(max-min), 0, 1, 0); fi.BackgroundColor3 = UIConfig.AccentColor; fi.BorderSizePixel = 0
            b.InputBegan:Connect(function(i)
                if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then
                    local con = UserInputService.InputChanged:Connect(function(i2)
                        if i2.UserInputType == Enum.UserInputType.MouseMovement or i2.UserInputType == Enum.UserInputType.Touch then
                            local p = math.clamp((i2.Position.X - b.AbsolutePosition.X) / b.AbsoluteSize.X, 0, 1)
                            fi.Size = UDim2.new(p, 0, 1, 0)
                            callback(math.floor(min + (max-min)*p))
                        end
                    end)
                    i.Changed:Connect(function() if i.UserInputState == Enum.UserInputState.End then con:Disconnect() end end)
                end
            end)
        end

        function Tab:CreateParagraph(title, content)
            local f = Instance.new("Frame", Page)
            f.Size = UDim2.new(1, -5, 0, 60); f.BackgroundColor3 = UIConfig.SecondaryColor; f.BorderSizePixel = 0
            Instance.new("UICorner", f)
            local t = Instance.new("TextLabel", f)
            t.Size = UDim2.new(1, -10, 0, 20); t.Position = UDim2.new(0, 10, 0, 5); t.Text = title; t.Font = UIConfig.HeaderFont; t.TextColor3 = UIConfig.AccentColor; t.BackgroundTransparency = 1; t.TextXAlignment = Enum.TextXAlignment.Left
            local c = Instance.new("TextLabel", f)
            c.Name = "Content"; c.Size = UDim2.new(1, -20, 0, 30); c.Position = UDim2.new(0, 10, 0, 25); c.Text = content; c.Font = UIConfig.Font; c.TextColor3 = UIConfig.TextColor; c.BackgroundTransparency = 1; c.TextWrapped = true; c.TextXAlignment = Enum.TextXAlignment.Left; c.TextYAlignment = Enum.TextYAlignment.Top
            return f
        end

        function Tab:CreateLabel(t) 
            local l = Instance.new("TextLabel", Page)
            l.Size = UDim2.new(1, 0, 0, 20); l.Text = t; l.Font = UIConfig.Font; l.TextColor3 = UIConfig.TextColor; l.BackgroundTransparency = 1
        end
        function Tab:CreateSeparator()
            local s = Instance.new("Frame", Page)
            s.Size = UDim2.new(1, -10, 0, 1); s.BackgroundColor3 = Color3.fromRGB(40,40,40); s.BorderSizePixel = 0
        end
        function Tab:CreateKeybind(t, d, cb) Tab:CreateButton(t .. " ["..d.."]", cb) end
        function Tab:CreateTextbox(t, cb) Tab:CreateButton(t, cb) end
        function Tab:CreateColorPicker(t, d, cb) Tab:CreateButton(t, cb) end
        function Tab:CreatePlayerDropdown(t, cb) 
            local plrs = {} for _,p in pairs(game.Players:GetPlayers()) do if p ~= Players.LocalPlayer then table.insert(plrs, p.Name) end end
            Tab:CreateDropdown(t, plrs, cb)
        end

        return Tab
    end
    return Window
end

Library:LoadSequence()
return Library
